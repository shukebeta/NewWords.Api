<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" internalLogToConsole="true" internalLogLevel="info">
    <extensions>
        <add assembly="NLog.Web.AspNetCore" />
        <add assembly="NLog.Extensions.Logging" />
        <add assembly="NLog.Targets.Seq" />
    </extensions>
    <targets>
        <target xsi:type="File" name="file" fileName="${basedir}/logs/${shortdate}.log"
                layout="${longdate} ${uppercase:${level}} ${message}" />
        <target xsi:type="Console" name="console" layout="${longdate} ${uppercase:${level}} ${message}" />
        <target xsi:type="Seq" name="seq" serverUrl="${configsettings:SeqServerUrl}" apiKey="${configsetting:SeqApiKey}">
            <property name="Environment" value="${configsetting:ASPNETCORE_ENVIRONMENT}" />
            <property name="Host" value="${machinename}" />
            <property name="Application" value="NewWords.Api" />
            <property name="Version" value="${configsetting:VERSION}" />
        </target>
    </targets>

    <rules>
        <!-- Filter out verbose ASP.NET Core framework logs -->
        <logger name="Microsoft.AspNetCore.Mvc.Infrastructure.*" maxlevel="Warning" final="true" />
        <logger name="Microsoft.AspNetCore.Routing.*" maxlevel="Warning" final="true" />
        <logger name="Microsoft.AspNetCore.Authorization.*" maxlevel="Warning" final="true" />
        <logger name="Microsoft.AspNetCore.Hosting.*" maxlevel="Warning" final="true" />

        <!-- Application logs -->
        <logger name="*" minlevel="Information" writeTo="file,console,seq" />
    </rules>
</nlog>